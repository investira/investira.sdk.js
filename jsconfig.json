{
    "compilerOptions": {
        "target": "es6",
        "checkJs": true,
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["./lib/**/*", "_tests", "globals.d.ts"],
    "exclude": ["node_modules"]
}
